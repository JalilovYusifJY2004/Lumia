@using LumiaPraktika.Models;
@model List<Department>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Department Table</h4>
                        <a asp-action="create" asp-controller="department" class="btn btn-success">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>

                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Category Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Department department in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @department.Name
                                            </td>
                                            <td>
                                                @department.Description
                                            </td>
                                            <td>
                                            <td class="py-1">
                                                <img src="~/assets/img/team/@department.Image" alt="image" />
                                            </td>
                                            <td>
                                                    @department.Category.Name
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-controller="department" asp-route-id="@department.Id" class="btn btn-warning">Update</a>
                                                <a asp-action="Delete" asp-controller="department" asp-route-id="@department.Id" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
